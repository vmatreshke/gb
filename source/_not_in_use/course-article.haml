- content_for :triplet_rows do

  %tr
    %td.l-triplet-cell{rowspan: 2}
      = partial('partials/reference', locals: data.reference.nav.merge({active: 4}))
    %td.l-triplet-cell
      = partial('partials/author', locals: data.author.ayudin)
    %td.l-triplet-cell
      = partial('partials/course-button')
  %tr
    %td.l-triplet-cell
      = partial('partials/content/article')
    %td.l-triplet-cell
      %h4{style: 'margin-top: 29px'} Рекомендуем
      = partial('partials/reference', locals: data.reference.recommendations)
      %hr
      = partial('partials/labeled')