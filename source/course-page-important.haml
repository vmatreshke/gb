      = partial('partials/author', locals: data.author.lkotova)
    %td.l-triplet-cell
      = partial('partials/course-button')
  %tr
    %td.l-triplet-cell
      = partial('partials/content/course')
    %td.l-triplet-cell
      %h4{style: 'margin-top: 20px'} Рекомендуем
      = partial('partials/reference', locals: data.reference.recommendations)
      %hr
      = partial('partials/labeled')